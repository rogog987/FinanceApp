<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinanceApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views ="clr-namespace:FinanceApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="FinanceApp">

    <TabBar>    
        <ShellContent
        Title="All Transactions"
        ContentTemplate="{DataTemplate views:TransactionsPage}"
        Route="TransactionsPage" />

        <ShellContent
            Title="Add"
            ContentTemplate="{DataTemplate views:AddTransactionPage}"
            Route="AddTransactionPage" />

        <ShellContent
    Title="Expense Chart"
    ContentTemplate="{DataTemplate views:ExpenseChartPage}"
    Route="ExpenseChartPage" />

    </TabBar>
</Shell>
    
